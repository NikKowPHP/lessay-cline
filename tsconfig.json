{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "react",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "module": "esnext",
    "moduleResolution": "node",
    "moduleSuffixes": [".js"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "types": ["node", "next"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
